<h1>SHOW POSTS</h1>
<div class="master-cointer-post-show">
    <div>
    <h1>Post #<%= @post.id %> by <%= @user.name %></h1>
    <div>
        <p>comments: <%= @post.comments_counter %></p>
        <p>likes: <%= @post.likes_counter %></p>
    </div>
    </div>
    <div>
        <h2><%= @post.title %></h2>
        <p><%= @post.text %></p>
    </div>
    <div>
        <h3>Comments</h3>
        <% @post.comments.each do |comment| %>
            <div>
                <p><%= User.find(comment.user_id).name %></p>
                <p><%= comment.text %></p>
            </div>
        <% end %>
    </div>
    <%= button_to "Home", root_path, method: :get %>
</div>
